{

  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Launches Scheduler Worker Service",

  "Parameters" : {

    "StackOutputsArn" : {
      "Type" : "String"
    },

    "ServiceName" : {
      "Type" : "String"
    },

    "ServiceImage" : {
      "Type" : "String"
    },

    "ServiceVersion" : {
      "Type" : "String"
    },

    "DesiredCount" : {
      "Type" : "String",
      "Default" : "1"
    }

  },

  "Resources" : {

    "Registry": {
      "Type": "Custom::StackOutputs",
      "Properties": {
        "ServiceToken": { "Ref" : "StackOutputsArn" },
        "StackName" : "registry"
      }
    },

    "Lambda": {
      "Type": "Custom::StackOutputs",
      "Properties": {
        "ServiceToken": { "Ref" : "StackOutputsArn" },
        "StackName" : "lambda-scheduler"
      }
    },

    "ECS": {
      "Type": "Custom::StackOutputs",
      "Properties": {
        "ServiceToken": { "Ref" : "StackOutputsArn" },
        "StackName" : "ecs"
      }
    },

    "LoggingGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "RetentionInDays": "5"
      }
    },

    "SchedulerWorkerInstancePolicy" : {
       "Type" : "AWS::IAM::Policy",
       "Properties" : {
          "PolicyName" : "SchedulerInstancePolicy",
          "PolicyDocument" : {
            "Version" : "2012-10-17",
            "Statement": [
              {
               "Effect": "Allow",
               "Action": [
                 "logs:CreateLogGroup",
                 "logs:CreateLogStream",
                 "logs:PutLogEvents"
               ],
               "Resource": [ "arn:aws:logs:*:*:*" ]
              },
              {
                "Effect": "Allow",
                "Action": [ "dynamodb:Put*", "dynamodb:Delete*", "dynamodb:Scan", "dynamodb:UpdateItem" ],
                "Resource": [ { "Fn::Join" : ["", [ "arn:aws:dynamodb:", { "Ref" : "AWS::Region"}, ":", { "Ref" : "AWS::AccountId"},":table/", { "Fn::GetAtt": [ "Lambda", "Table" ] } ]] } ]
              }
            ]
          },
          "Roles" : [
            { "Fn::GetAtt" : ["ECS", "InstanceRole"] }
          ]
       }
    },

    "SchedulerWorkerTaskDefinition" : {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties" : {
        "ContainerDefinitions" : [
          {
            "Name" : { "Ref" : "ServiceName" },
            "Essential" : "true",
            "Command" : ["node", "worker.js"],
            "Image" : { "Fn::Join" : ["", [
              { "Fn::GetAtt": [ "Registry", "URL" ] }, "/",
              { "Ref" : "ServiceImage" }, ":", { "Ref" : "ServiceVersion" }]]
            },
            "Memory" : "128",
            "Cpu" : "64",
            "Environment" : [
              {
                "Name" : "DYNAMO_TABLE",
                "Value" : { "Fn::GetAtt": [ "Lambda", "Table" ] }
              },
              {
                "Name" : "AWS_REGION",
                "Value" : { "Ref" : "AWS::Region" }
              }
            ]
          }
        ]
      }
    },

    "SchedulerWorkerService": {
      "Type": "AWS::ECS::Service",
      "Properties" : {
        "Cluster": { "Fn::GetAtt": [ "ECS", "ECSCluster" ] },
        "DesiredCount": { "Ref": "DesiredCount" },
        "TaskDefinition" : { "Ref":"SchedulerWorkerTaskDefinition" }
      }
    }
  },

  "Outputs" : {
    "WorkerTaskDefinition" : {
      "Description" : "ECS Task to run on each ECS Instance",
      "Value" : { "Ref" : "SchedulerWorkerTaskDefinition" }
    },

    "InstancePolicy" : {
      "Description" : "Instance policy that grants access to the S3 Bucket",
      "Value" : { "Ref" : "SchedulerWorkerInstancePolicy" }
    }


  }

}
